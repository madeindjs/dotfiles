#!/usr/bin/env bash -eux
# find every audio file in the current directory which have a lower bitrate than the one specified
set -e

if ! which music-metadata-search >/dev/null 2>&1; then
  echo 'music-metadata-search not found. Install it "npm i -g music-metadata-search"'
fi

music-metadata-search . -w 'bitrate < 320000' --format json | jq -r '.[] | "\(.path), \(.bitrate/1000 | round) kb/s , " ' | sort
